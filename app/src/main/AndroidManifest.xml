<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.brainblastquizapp">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BrainblastQuizApp">
        <activity android:name=".QuizResultActivity" />
        <activity android:name=".QuizDetailsActivity" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity android:name=".QuizListActivity"/>
        <activity android:name=".ProfileActivity" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".LeaderboardActivity" />
        <activity android:name=".QuizQuestionActivity" />
        <activity android:name=".PlayCategoriesActivity" />
        <activity android:name=".MainMenuActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>