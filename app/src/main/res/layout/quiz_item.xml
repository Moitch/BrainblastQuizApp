<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/answer1TextView"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/answer_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answer2TextView"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/answer_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer3TextView" />

    <TextView
        android:id="@+id/answer3TextView"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/answer_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer4TextView" />

    <TextView
        android:id="@+id/answer4TextView"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/answer_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer1TextView" />
</androidx.constraintlayout.widget.ConstraintLayout>